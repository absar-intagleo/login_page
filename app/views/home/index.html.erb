<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
	    <div class="col-md-6">
	    	<%= form_tag redirect_home_index_path, :method => 'post', :id => :login_form, :class => "mt-5" , :role => :form, :target => "#{@form_target}" do %>
				  <div class="form-group">
				    <label for="email">Email address</label>
				    <%= email_field_tag 'email', '', id: 'email', placeholder: "Enter email", class: 'form-control', required: true %>

				  </div>
				  <div class="form-group">
				    <label for="email">Password</label>
				    <%= password_field_tag 'password', '', id: 'password', placeholder: "Enter password", class: 'form-control', required: true %>
				  </div>
			  	<%= submit_tag "Submit", id: "submit",class: 'btn btn-primary' %>
			  <% end %>
	    </div>
		</div>      
	</div>
</div>